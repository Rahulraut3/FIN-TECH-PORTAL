@model IBS_DALayer.Models.CustomerAllDetail
@{
    ViewData["Title"] = "CustomerDetail";
    Layout = "~/Views/Shared/_FixedCustomerLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CustomerDetail</title>
</head>
<body>
    <h5 style="color:red;">@ViewBag.ExcError</h5>
    <div class="container">
        <div class="row">
                <div class="col">
                    <button class="btn btn-primary" type="button">
                        Account Details
                    </button>
                                <h5 class="card-title">Customer Name</h5>
                                <p class="card-text"> @Model.CustomerName </p>
                                <h5 class="card-title">Phone Number </h5>
                                <p class="card-text">@Model.PhoneNumber</p>
                                <h5 class="card-title">Email</h5>
                                <p class="card-text"> @Model.Email</p>
                                <h5 class="card-title">Adhar Number</h5>
                                <p class="card-text"> @Model.Aadhar</p>
                                <h5 class="card-title">PAN</h5>
                                <p class="card-text"> @Model.PAN</p>
                                <h5 class="card-title">Date Of birth</h5>
                        <p class="card-text">@Model.DOB.ToShortDateString()</p>
                                <h5 class="card-title">Address</h5>
                                <p class="card-text">  @Model.Address</p>
                                 
                                @Html.ActionLink("Edit", "EditPersonalDetailForFixed", new { AccountNumber = @Model.AccountNumber })
                </div>  
                <div class="col">
                    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample2" aria-expanded="true" aria-controls="collapseExample">
                        Account Details
                    </button>

                    <div class="collapse" id="collapseExample2">
                        <div class="card">
                            
                            <div class="card-body">
                                <h5 class="card-title">Branch Name</h5>
                                <p class="card-text"> @Model.BranchName</p>
                                <h5 class="card-title">IFSC COde </h5>
                                <p class="card-text"> @Model.IFSCCode</p> 
                                <h5 class="card-title">Account Number</h5>
                                <p class="card-text"> @Model.AccountNumber</p>
                                <h5 class="card-title">Account Type</h5>
                                <p class="card-text"> @Model.AccountType</p>

                                <h5 class="card-title">Account Balance</h5>
                                <p class="card-text">@Model.AccountBalance</p>

                                <h5 class="card-title">Account Creation Date</h5>
                                <p class="card-text"> @Model.AccountCreationDate</p>

                                <!-- <a href="#" class="btn btn-primary">Edit</a> -->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample3" aria-expanded="true" aria-controls="collapseExample">
                        Nominee Details
                    </button>

                    <div class="collapse" id="collapseExample3">
                        <div class="card">
                            
                            <div class="card-body">
                                <h5 class="card-title">Nominee Name</h5>
                                <p class="card-text"> @Model.NomineeName</p>
                                <h5 class="card-title">Relation </h5>
                                <p class="card-text"> @Model.Relation</p>
                                <h5 class="card-title">Phone Number</h5>
                                <p class="card-text"> @Model.NomPhoneNumber</p>
                                <h5 class="card-title">Address</h5>
                                <p class="card-text"> @Model.NomineeAddress</p>

                                @Html.ActionLink("Edit", "EditNomineeDetailsForFixed", new { AccountNumber = @Model.AccountNumber })
                                
                            </div>
                        </div>
                    </div>
                </div>
            
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</body>
</html>

