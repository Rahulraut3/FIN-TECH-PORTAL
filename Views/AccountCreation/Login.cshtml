@model IBS_DALayer.Models.User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_MainMenu.cshtml";
}
<h5 style="color:red;">@ViewBag.ExcError</h5>
    
    <style>
        .divider:after,
.divider:before {
  content: "";
  flex: 1;
  height: 1px;
  background: #eee;
}
.h-custom {
  height: calc(100% - 73px);
}

    </style>
    <br/>

    <p> @ViewBag.err</p>
    <section clmargin>

  <div class="container-fluid h-custom">

    <div class="row d-flex justify-content-left align-items-left h-200">
        
      
      <div style="border:solid;border-color:skyblue;border-radius:15px;padding:40px;" class="col-md-9 col-lg-8 col-xl-4 offset-xl-1 ">
        <h3 style="color:red;">
            @ViewBag.LoginError
        </h3>
          <form  action="/AccountCreation/Login" method="post" border-block-end> 
            <!-- User input -->
          <div class="form-outline mb-4">
              <label class="form-label" for="UserId">UserId</label>
            <input type="text" id="UserId" name="UserId" class="form-control form-control-lg"
              placeholder="Enter a valid User Id" />
            
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <label class="form-label" for="Password">Password</label>

            <input type="password" id="Password" name="Password" class="form-control form-control-lg"
              placeholder="Enter password" />
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
              <label class="form-check-label" for="form2Example3">
                Remember me
              </label>
            </div>
            <a href="#!" class="text-body">Forgot password?</a>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <input type="submit" value="Login" class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;"/>
            <p class="fw-bold mt-2 pt-2 mb-10">Don't have an account? <a href="/AccountCreation/Registration"
                class="link-danger">Register</a></p>
          </div>
        </form>
      </div>

      <div class="col-md-9 col-lg-6 col-xl-4 offset-xl-2">
        <img style="margin-top:30px;" class="card-img-top img-fluid " src="/StyleSheet/images/Daco_4766749.png" alt=""/>
      </div>

    </div>

    </div>
    <br/>
    <br/>

</section>